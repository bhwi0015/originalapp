<%= form_with model: @user, url: user_session_path, class: 'registration-main', local: true do |f| %>
<%= link_to '新規登録はこちら', new_user_registration_path, class: "session-sign-up" %>

  <div class='form-header'>
    <h2>アプリケーション名</h2>
    <p class="login_session">ログイン</p>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可能" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
    <p class='info-text'></p>
  <div class='register-btn'>
    <%= f.submit "ログイン" ,class:"register-login"%>
   </div>
   </div>
<% end %>
