<% if user_signed_in? %>
    <% if current_user.already_liked?(post) %>
        <%= link_to post_likes_path(post), method: :delete, remote: true do %>
            <i class="fa fa-heart" aria-hidden="true" style="color: red;">
                <%= post.likes.count %>
            </i>
        <% end %>
    <% else %>
        <%= link_to post_likes_path(post), method: :post, remote: true do %>
            <i class="fa fa-heart" aria-hidden="true" style="color: rgb(78, 106, 252);">
                <%= post.likes.count %>
            </i>
        <% end %>
    <% end %>
<% else %>
    <i class="fa fa-heart" aria-hidden="true">
            <%= post.likes.count %>
    </i>
<% end %>
